{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["svelte3"],
    "extends": ["eslint:recommended"],
    "overrides": [
        {
        "files": ["**/*.svelte"],
        "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "semi": ["error", "always"]
    }
}
